---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('project').then(posts => posts.sort(
    (a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
));
---
<Layout title="Project S | emilioacevedo.dev">
    <main>
        <h1 class="font-heading uppercase text-4xl md:text-5xl font-bold mb-4 text-glow-cyan">// Project S Development Log</h1>
        <p class="text-xl mb-12 text-text-color/80">
            A public chronicle of the design and engineering behind a complex interactive simulation.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {allPosts.map(post => (
                <PostCard post={post} />
            ))}
        </div>
    </main>
</Layout>

