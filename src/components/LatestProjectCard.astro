---
// src/components/LatestProjectCard.astro
import type { CollectionEntry } from 'astro:content';

interface Props {
    post: CollectionEntry<'project'>;
}
const { post } = Astro.props;
---
<a href={`/project/${post.slug}`} class="block group blueprint-card p-6">
    <div class="flex justify-between items-start mb-4">
        <h3 class="font-heading uppercase text-2xl font-bold group-hover:text-accent-cyan transition-colors duration-300">
            {post.data.title}
        </h3>
        <span class="font-heading uppercase text-sm text-accent-cyan">[ Dev Log ]</span>
    </div>
    <p class="text-text-color/80 font-body">
        {post.data.description}
    </p>
    <div class="mt-4 text-accent-cyan/60 group-hover:text-accent-cyan transition-colors duration-300">
        Read Entry &rarr;
    </div>
</a>

